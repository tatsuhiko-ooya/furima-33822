<div class='heart-btn' id="heart_<%= product.id %>">
  <% if user_signed_in? && current_user != product.user %>
    <% if current_user.is_liked?(product) %>
      <%= link_to product_like_path(product, product.likes.find_by(user_id: current_user.id).id), method: :DELETE, remote: true do %>
        <i class="fa fa-heart unlike-btn"></i>    <% end %>
    <% else %>
      <%= link_to product_likes_path(product), method: :POST, remote: true do %>
          <i class="fa fa-heart like-btn"></i>
      <% end %>
    <% end %>
  <% end %>
  <span class='star-count'><%= product.likes.count %></span>
</div>